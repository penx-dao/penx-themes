{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env", "**/.env.production", "**/.env.*local"],
  "globalEnv": [
    "TAURI_ENV_PLATFORM",
    "NEXT_PUBLIC_DEFAULT_THEME",
    "NEXTAUTH_SECRET",
    "NEXT_PUBLIC_PROJECT_ID",
    "NEXT_PUBLIC_DEPLOY_MODE",
    "NODE_ENV",
    "SELF_HOSTED_USERNAME",
    "SELF_HOSTED_PASSWORD",
    "NEXT_PUBLIC_GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "NEXT_PUBLIC_GITHUB_CLIENT_ID",
    "GITHUB_CLIENT_SECRET",
    "NEXT_PUBLIC_GITHUB_APP_NAME",
    "GITHUB_PRIVATE_KEY",
    "GITHUB_APP_ID",
    "DATABASE_TYPE",
    "CI",
    "MODE",
    "SKIP_ENV_VALIDATION",
    "NEXT_PUBLIC_API_BASE_URL",
    "NEXT_PUBLIC_NETWORK",
    "NEXT_PUBLIC_MAINNET_RPC_URL",
    "NEXT_PUBLIC_SEPOLIA_RPC_URL",
    "NEXT_PUBLIC_DEVELOP_RPC_URL",
    "NEXT_PUBLIC_LOCAL_RPC_URL",
    "NEXT_PUBLIC_SUPABASE_URL",
    "NEXT_PUBLIC_SUPABASE_BUCKET",
    "NEXT_PUBLIC_SEPOLIA_RPC",
    "NEXT_PUBLIC_IS_EARLY_STAGE",
    "NEXT_PUBLIC_IS_SYNC_ENABLED",
    "NEXT_PUBLIC_PRIVY_APP_ID",
    "PRIVY_APP_SECRET",
    "SUPABASE_KEY",
    "PORT",
    "REDIS_URL",
    "NEXT_PUBLIC_PLATFORM",
    "PLASMO_PUBLIC_PLATFORM",
    "PLASMO_PUBLIC_BASE_URL",
    "TWITTER_BEARER_TOKEN",
    "SCRAPINGBEE_API_KEY",
    "GITHUB_BOT_APP_ID",
    "GITHUB_BOT_CLIENT_ID",
    "GITHUB_BOT_CLIENT_SECRET",
    "NEXT_PUBLIC_GITHUB_BOT_APP_NAME",
    "GITHUB_BOT_INSTALLATION_ID",
    "GITHUB_BOT_PRIVATE_KEY",
    "GITHUB_BOT_TARGET_REPO",
    "NEXT_PUBLIC_UMAMI_WEBSITE_ID"
  ],
  "remoteCache": {
    "signature": true
  },
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {}
  }
}
